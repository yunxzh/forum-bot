# ============================================
# Forum-Bot 环境配置文件
# ============================================

# ============================================
# 基础配置
# ============================================
# Web 访问端口
WEB_PORT=80

# 数据和日志目录
DATA_DIR=./data
LOG_DIR=./logs

# 数据库路径
DATABASE_PATH=/app/data/forum_bot.db

# ============================================
# 安全密钥（生产环境必须修改！）
# ============================================
# 使用 openssl rand -hex 32 生成随机密钥
SECRET_KEY=your-secret-key-MUST-change-in-production
JWT_SECRET_KEY=jwt-secret-key-MUST-change-in-production

# ============================================
# 应用配置
# ============================================
FLASK_ENV=production
DEBUG=false
BACKEND_PORT=5000

# ============================================
# 浏览器配置
# ============================================
# Chrome 版本（留空自动检测）
CHROME_VERSION=142

# 无头模式
HEADLESS=true

# Docker 环境
IN_DOCKER=true

# ============================================
# 网络代理（如需要）
# ============================================
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/forum_bot.log

# ============================================
# 时区设置
# ============================================
TIMEZONE=Asia/Shanghai

# ============================================
# Python 配置
# ============================================
PYTHONUNBUFFERED=1
PYTHONIOENCODING=utf-8

# ============================================
# 性能配置
# ============================================
WORKERS=1
TIMEOUT=300

# ============================================
# 资源限制
# ============================================
CPU_LIMIT=2
MEMORY_LIMIT=2G
CPU_RESERVATION=0.5
MEMORY_RESERVATION=512M

# ============================================
# 默认管理员账户
# ============================================
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# ============================================
# AI 配置（可选，也可在 Web 界面配置）
# ============================================
# AI 提供商：openai, new-api, one-api, etc.
AI_PROVIDER=new-api

# API 基础 URL
AI_BASE_URL=https://api-inference.modelscope.cn/v1

# API 密钥
AI_API_KEY=sk-your-api-key-here

# 使用的模型
AI_MODEL=Qwen/Qwen3-VL-30B-A3B-Instruct

# Temperature (0-2)
AI_TEMPERATURE=0.8

# 最大 Token
